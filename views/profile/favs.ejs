<h1><%= currentUser.name %> Saved Hikes</h1>
<% userFavs.forEach(fav => { %>
    <div class='hikeDisplay'>
        <h3> <%= fav.title %> </h3> 
        <!-- <h4> <%#= fav.region %> </h4> -->
        <div class='image'>
             <img src='<%=fav.imgUrl %>'> 
        </div>
         <%#= fav.height %>
         <p> Distance: <%= fav.distance %></p>
         <form method='POST' action='/profile/favorites/<%- fav.id %>/?_method=DELETE'>
            <input type='submit' value='Remove From Favorites'>
         </form>
     </div>
<% }) %>
